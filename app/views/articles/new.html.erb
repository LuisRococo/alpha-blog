<h1>Create Article</h1>

<% if @article.errors.any? %>
    <h2>The following errors prevented the article to be saved</h2>
    
    <ur>
        <%@article.errors.full_messages.each do |msj| %>
            <li><%= msj%></li>
        <%end%>
    </ul>
<% end %>

<%= form_with scope: :article, url: articles_path, local: true, data: { turbo: false } do |f| %>

    <p>
        <%= f.label :title%><br>
        <%= f.text_field :title%>
    </p>

    <p>
        <%= f.label :description%><br>
        <%= f.text_area :description%>
    </p>

    <p>
        <%= f.submit%>
    </p>
<% end %>